Swap Alternative Array Element

#include<iostream>
using namespace std;

void display(int arr[], int size){
	for(int i = 0; i < size; i++){
		cout<<arr[i]<<" ";
	}
}

int main(){
	int arr[5] = {1,2,3,4,5};
	int arr2[4] = {1,2,3,4};
	cout<<"starting"<<endl;
	
	for(int i=0;i<4;i=i+2){
		if((i+1)<4){
			swap(arr2[i],arr2[i+1]);
		}
	}
	display(arr2, 4);
}
