Swtich Case 

 #include<iostream>
using namespace std;

int main(){
	int a,b;
	cin>>a>>b;
	char ch;
	cin>>ch;
	switch(ch){
		case '+': cout<<"Addition is "<<a+b<<endl;
				  break;
		case '-': cout<<"Subsctraction is "<<a-b<<endl;
				  break;
		case '*': cout<<"Multiplication is "<<a*b<<endl;
				  break;
		case '/': cout<<"Division is "<<a/b<<endl;
				  break;
		default: cout<<"Invalid Input"<<endl;
	}
}
