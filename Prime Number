Prime Number

#include<iostream>
using namespace std;

bool isPrime(int n){
	for(int i = 2; i<n;i++){
		if(n%i == 0){
			cout<<"The value of i is "<<i<<" and n is "<<n<<endl;
			return 1;
		}
	}
	return 0;
}

int main(){
	int n;
	cin>>n;
	if(isPrime(n)){
		cout<<"Nummber is not Prime"<<endl;
	} else{
		cout<<"Number is Prime"<<endl;
	}
}
